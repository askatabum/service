      <div class="login-logo">
         
          <img  src="{{ asset('images/logo_corona_200.jpg') }}" alt=""/>
          <a href="{{ path('homepage') }}"><h2>{{ page.name|default('nazwa strony') }} {{ page.version|default('') }}</h2> </a>
  </div>
